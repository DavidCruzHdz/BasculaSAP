@model ObtenerPesoSAP.Models.CPCatMensajesSAP

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()


    <div class="col-md-12 jumbotron" style="color:#000000; font:caption; background-color:#5c87b2;">
        <h4>Agregar nuevo mensaje</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CPDescripcionMsjSAP, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.CPDescripcionMsjSAP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CPDescripcionMsjSAP, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.CPTextoAnexo, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.CPTextoAnexo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CPTextoAnexo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-danger btn-lg" />
                @Html.ActionLink("Regresar", "Index", "MensajesAnexos", null, new { @class = "btn btn-danger btn-lg", @style = "display:inline" })
            </div>
        </div>
    </div>
}

