@model ObtenerPesoSAP.Models.CPPermisosPlantas

@{
    ViewBag.Title = "Cambiar el usuario de Planta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}
<br />
<br />
<br />
<br />
<div class="col-md-10 jumbotron" style="color:#000000; font:caption; background-color:#5c87b2;">
    <h2>Cambiar el usuario de Planta</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Seleccione la planta a donde se va a cambiar</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CPId)

            <div class="form-group">
                @Html.LabelFor(model => model.CPIdUsuario, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CPIdUsuario", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.CPIdUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.CPIdEmpresa, "Empresa", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CPIdEmpresa", null, "Seleccione el Año", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CPIdEmpresa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPIdTipoCaptura, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CPIdTipoCaptura", (IEnumerable<SelectListItem>)ViewBag.dropdownTipos, "Seleccione Tipo de Captura", new { id = "TipoCaptura", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CPIdTipoCaptura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cambiar" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
</div>



<div class="row">
    @section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>

    <script>
        $("#boton").click(function (evt) {

            if ($("#cam1").val() != $("#cam2").val()) {
                evt.preventDefault();
                alert("La coontraseña no coincide");
            }
        });
    </script>
