@model ObtenerPesoSAP.Models.CPCatEmpresas

@{
    ViewBag.Title = "Edit";
}


<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal col-md-12 jumbotron" style="color:#000000; font:caption; background-color:#5c87b2;">
            <h2>Editar</h2>
            <h4>Modificar datos de planta</h4>
            <hr />
            
            <div class="form-group">
                @Html.LabelFor(model => model.CPIdEmpresa, htmlAttributes: new { @class = "control-label col-md-2" })
              <div class="col-md-10">
                    @Html.EditorFor(model => model.CPIdEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CPIdEmpresa, "", new { @class = "text-danger" })
              </div>
           </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPDescripcionEmpresa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CPDescripcionEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CPDescripcionEmpresa, "", new { @class = "text-danger" })
                </div>
            </div>

            
            <div class="form-group">
                @Html.LabelFor(model => model.CPIdTipoCaptura, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CPIdTipoCaptura", (IEnumerable<SelectListItem>)ViewBag.dropdownTipos, "Seleccione Tipo de Captura", new { id = "TipoCaptura", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CPIdTipoCaptura, "", new { @class = "text-danger" })
                </div>
            </div>
            
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Grabar" class="btn btn-danger" />
                        @Html.ActionLink("Regresar", "Index", "Plantas", new { IdPlanta = @ViewBag.IdPlanta, IdAnio = @ViewBag.anio }, new { @class = "btn btn-danger", @style = "display:inline" })
                    </div>
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
