@model ObtenerPesoSAP.Models.CPUsuario

@{
    ViewBag.Title = "Registrar Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
}
<br />
<br />



<div class="col-md-12 jumbotron" style="color:#000000; font:caption; background-color:#5c87b2;">
    <h2>Registrar Usuarios</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.CPNombreUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CPNombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CPNombreUsuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPCorreo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CPCorreo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CPCorreo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CPPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.CPPassword, new { htmlAttributes = new { @class = "form-control", @id = "cam1" } })
                    @Html.ValidationMessageFor(model => model.CPPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CPPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.CPPassword, new { htmlAttributes = new { @class = "form-control", @id = "cam2" } })
                    @Html.ValidationMessageFor(model => model.CPPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Grabar" class="btn btn-danger btn-lg" id="boton" />
                    @Html.ActionLink("Regresar", "Index", "Usuarios", null, new { @class = "btn btn-danger btn-lg", @style = "display:inline" })
                </div>
            </div>
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

    }
    </div>

    <script>
        $("#boton").click(function (evt) {

            if ($("#cam1").val() != $("#cam2").val()) {
                evt.preventDefault();
                alert("La coontraseña no coincide");
            }
        });
    </script>
